[ARGS]
Description = Startup argument for Kopano Konnect (defaults to local Kopano installation).
Type = String
InitialValue = --iss=https://@%@hostname@%@.@%@domainname@%@ --identifier-registration-conf /etc/kopano/identifier-registration.yaml kc
Required = True
Show = Install, Settings

